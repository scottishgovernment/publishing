{% from "../macros.njk" import pageTitle %}

{% macro daySelectQuestion(id='tenancy-payment-frequency-day', labelText='On which day?', placeholderText='Choose a day') %}
    <div class="ds_question">
        <label class="ds_label" for="{{id}}">{{labelText}}</label>
        <div class="ds_select-wrapper">
            <select class="ds_select" id="{{id}}" data-validation="requiredDropdown">
                <option value="" disabled="" selected="">{{placeholderText}}</option>
                <option {% if day === 'Monday' %}selected{% endif %}>Monday</option>
                <option {% if day === 'Tuesday' %}selected{% endif %}>Tuesday</option>
                <option {% if day === 'Wednesday' %}selected{% endif %}>Wednesday</option>
                <option {% if day === 'Thursday' %}selected{% endif %}>Thursday</option>
                <option {% if day === 'Friday' %}selected{% endif %}>Friday</option>
                <option {% if day === 'Saturday' %}selected{% endif %}>Saturday</option>
                <option {% if day === 'Sunday' %}selected{% endif %}>Sunday</option>
            </select>
            <span class="ds_select-arrow" aria-hidden="true"></span>
        </div>
    </div>
{% endmacro %}

{% macro weekSelectQuestion(id='tenancy-payment-frequency-week', labelText='On which week?', placeholderText='Choose a week', fourWeeks=true) %}
    <div class="ds_question">
        <label class="ds_label" for="{{id}}">{{labelText}}</label>
        <div class="ds_select-wrapper">
            <select class="ds_select" id="{{id}}" data-validation="requiredDropdown">
                <option value="" disabled="" selected="">{{placeholderText}}</option>
                <option {% if week === 'First week' %}selected{% endif %}>First week</option>
                <option {% if week === 'Second week' %}selected{% endif %}>Second week</option>
                {% if fourWeeks %}
                    <option {% if week === 'Third week' %}selected{% endif %}>Third week</option>
                    <option {% if week === 'Fourth week' %}selected{% endif %}>Fourth week</option>
                {% endif %}
            </select>
            <span class="ds_select-arrow" aria-hidden="true"></span>
        </div>
    </div>
{% endmacro %}

