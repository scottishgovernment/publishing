{% from "../macros.njk" import addressFromObject %}

{% macro optionalTerms(excluded) %}
    {% set count = 0 %}
    {% for item in optionalTermsAsArray %}
        {% if item.excluded == excluded %}
            {% set count = count + 1 %}
        {% endif %}
    {% endfor %}

    {% if count > 0 %}
        <div class="ds_accordion" data-module="ds-accordion">
            <button type="button" class="ds_link  ds_accordion__open-all  js-open-all">Open all <span class="visually-hidden">sections</span></button>

            {% for item in optionalTermsAsArray %}
                {% if (excluded and item.excluded) or (excluded != true and item.excluded != true) %}
                <div class="ds_accordion-item">
                    <input type="checkbox" class="visually-hidden  ds_accordion-item__control" id="panel-{{item.slug}}-{{idModifier}}" aria-labelledby="panel-{{item.slug}}-heading" />
                    <div class="ds_accordion-item__header">
                        <h3 id="panel-{{item.slug}}-heading-{{idModifier}}" class="ds_accordion-item__title">
                            {{item.title}}
                        </h3>
                        <span class="ds_accordion-item__indicator"></span>
                        <label class="ds_accordion-item__label" for="panel-{{item.slug}}-{{idModifier}}"><span class="visually-hidden">Show this section</span></label>
                    </div>

                    <div class="ds_accordion-item__body" id="accordion-item-{{item.slug}}-{{idModifier}}">
                        {{ item.content | paragraphify | safe }}

                        {% if item.name == 'alterations' %}
                        <p>Any request for adaptations, auxiliary aids or services under section 37 of the Equality Act
                            2010 or section 52 of the Housing (Scotland) Act 2006 must be made in writing to the
                            Landlord and any other owners of the common parts, where appropriate. Consent for
                            alterations requested under this legislation should not be unreasonably withheld. If no
                            consent is given for the adaptations you may appeal to the Tribunal in relation to section
                            52 (or sheriff court in relation to section 37) within 6 months of being notified of the
                            decision. Before doing this, you may find it helpful to discuss your circumstance with your
                            local Citizens Advice Bureau, Shelter Scotland or the local authority for the area where the
                            Let Property is situated.</p>
                        {% endif %}

                        <button class="ds_link  js-change" type="button" data-slug="{{item.slug}}" aria-describedby="panel-{{item.slug}}-heading-{{idModifier}}">Change</button>
                    </div>
                </div>
                {% endif %}
            {% endfor %}

            {% if excluded != true and item.excluded != true %}
                {% for item in additionalTerms %}
                    {% set itemSlug = 'additional-term' + loop.index %}
                    <div class="ds_accordion-item">
                        <input type="checkbox" class="visually-hidden  ds_accordion-item__control" id="panel-{{itemSlug}}-{{idModifier}}" aria-labelledby="panel-{{itemSlug}}-heading" />
                        <div class="ds_accordion-item__header">
                            <h3 id="panel-{{itemSlug}}-heading-{{idModifier}}" class="ds_accordion-item__title">
                                {{item.title}}
                            </h3>
                            <span class="ds_accordion-item__indicator"></span>
                            <label class="ds_accordion-item__label" for="panel-{{itemSlug}}-{{idModifier}}"><span class="visually-hidden">Show this section</span></label>
                        </div>

                        <div class="ds_accordion-item__body" id="accordion-item-{{itemSlug}}-{{idModifier}}">
                            {{ item.content | paragraphify | safe }}

                            <button class="ds_link  js-change" type="button" data-slug="additional-terms" aria-describedby="panel-{{itemSlug}}-heading-{{idModifier}}">Change</button>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    {% else %}
        <p>None</p>
    {% endif %}
{% endmacro %}

<section>
    <h2>1. About the property</h2>

    <dl class="ds_summary-list  mg_summary-list--cya">
        {% set itemSlug = 'property-address' %}
        <div class="ds_summary-list__item">
            <dt class="ds_summary-list__key" id="{{itemSlug}}-title">Property address</dt>
            <span class="ds_summary-list__value"><q class="ds_summary-list__answer">{{addressFromObject(propertyAddress)}}</q></span>
            <div class="ds_summary-list__actions">
                <button class="ds_link  js-change" type="button" data-slug="{{itemSlug}}" aria-describedby="{{itemSlug}}-title">Change</button>
            </div>
        </div>

        {% set itemSlug = 'property-type' %}
        <div class="ds_summary-list__item">
            <dt class="ds_summary-list__key" id="{{itemSlug}}-title">Type of home</dt>
            <span class="ds_summary-list__value"><q class="ds_summary-list__answer">
                {{ propertyType_text}}
                {% if (propertyType == 'OTHER') %}
                    {% if buildingOther %}
                        ({{ buildingOther}})
                    {% endif %}
                {% endif %}
            </q></span>
            <div class="ds_summary-list__actions">
                <button class="ds_link  js-change" type="button" data-slug="{{itemSlug}}" aria-describedby="{{itemSlug}}-title">Change</button>
            </div>
        </div>

        {% set itemSlug = 'property-included' %}
        <div class="ds_summary-list__item">
            <dt id="{{itemSlug}}-title" class="ds_summary-list__key">
                Areas and facilities
            </dt>

            <dd class="ds_summary-list__value">
                {% if facilities.length %}
                <dl>
                    {% if facilitiesByType.included.length %}
                        <dt>Included</dt>
                        {% for facility in facilitiesByType.included %}
                            <dd>{{facility.name}}</dd>
                        {% endfor %}
                    {% endif %}

                    {% if facilitiesByType.shared.length %}
                        <dt>Shared</dt>
                        {% for facility in facilitiesByType.shared %}
                            <dd>{{facility.name}}</dd>
                        {% endfor %}
                    {% endif %}

                    {% if facilitiesByType.excluded.length %}
                        <dt>Excluded</dt>
                        {% for facility in facilitiesByType.excluded %}
                            <dd>{{facility.name}}</dd>
                        {% endfor %}
                    {% endif %}
                </dl>
                {% else %}
                    None
                {% endif %}
            </dd>

            <dd class="ds_summary-list__actions">
                <button class="ds_link  js-change" type="button" data-slug="property-included" aria-describedby="{{itemSlug}}-title">Change</button>
            </dd>
        </div>

        {% set itemSlug = 'property-furnished' %}
        <div class="ds_summary-list__item">
            <dt class="ds_summary-list__key" id="{{itemSlug}}-title">Is the property furnished?</dt>
            <dd class="ds_summary-list__value"><q class="ds_summary-list__answer">{{ furnishingType_text}}</q></dd>
            <dd class="ds_summary-list__actions">
                <button class="ds_link  js-change" type="button" data-slug="{{itemSlug}}" aria-describedby="{{itemSlug}}-title">Change</button>
            </dd>
        </div>

        {% set itemSlug = 'property-hmo' %}
        <div class="ds_summary-list__item">
            <dt class="ds_summary-list__key" id="{{itemSlug}}-title">House in Multiple Occupation (HMO)</dt>
            <dd class="ds_summary-list__value"><q class="ds_summary-list__answer">
                {% if (hmoProperty == 'true') %}Yes{% endif %}{% if (hmoProperty == 'false') %}No{% endif %}
            </q></dd>
            <dd class="ds_summary-list__actions">
                <button class="ds_link  js-change" type="button" data-slug="{{itemSlug}}" aria-describedby="{{itemSlug}}-title">Change</button>
            </dd>
        </div>

        {% if (hmoProperty == 'true') %}
            <div class="ds_summary-list__item">
                <dt class="ds_summary-list__key" id="{{itemSlug}}-title2">HMO 24 hour contact number</dt>
                <dd class="ds_summary-list__value"><q class="ds_summary-list__answer">
                    {{ hmo24ContactNumber }}
                </q></dd>
                <dd class="ds_summary-list__actions">
                    <button class="ds_link  js-change" type="button" data-slug="{{itemSlug}}" aria-describedby="{{itemSlug}}-title2">Change</button>
                </dd>
            </div>

            <div class="ds_summary-list__item">
                <dt class="ds_summary-list__key" id="{{itemSlug}}-title3">HMO license expiry date</dt>
                <dd class="ds_summary-list__value"><q class="ds_summary-list__answer">
                    {{ hmoRegistrationExpiryDate }}
                </q></dd>
                <dd class="ds_summary-list__actions">
                    <button class="ds_link  js-change" type="button" data-slug="{{itemSlug}}" aria-describedby="{{itemSlug}}-title3">Change</button>
                </dd>
            </div>
        {% endif %}
    </dl>
</section>

