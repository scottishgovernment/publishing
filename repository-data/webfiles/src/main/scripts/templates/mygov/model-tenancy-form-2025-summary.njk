                        <dt>On which day of the quarter</dt>
                        <dd>{{rentPaymentScheduleObject.date}}</dd>
                    {% elif rentPaymentFrequency === 'EVERY_SIX_MONTHS' %}
                        <dt>On which day of the 6 month period</dt>
                        <dd>{{rentPaymentScheduleObject.date}}</dd>
                    {% endif %}
