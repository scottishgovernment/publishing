{{#sites}}
      /{{id}}-editors:
        jcr:primaryType: hipposys:group
        hipposys:securityprovider: internal
        hipposys:userroles:
          - xm.cms.user
          - xm.content.user
          - xm.channel.user
          - xm.report.user
          - xm.dashboard.user
          - xm.channel.webmaster
      /{{id}}-authors:
        jcr:primaryType: hipposys:group
        hipposys:securityprovider: internal
        hipposys:userroles:
          - xm.cms.user
          - xm.content.user
          - xm.channel.user
          - xm.report.user
          - xm.dashboard.user
          - xm.channel.viewer
{{#feedback}}
