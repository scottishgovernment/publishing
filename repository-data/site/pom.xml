<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0          http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>scot.mygov.publishing</groupId>
    <artifactId>publishing-repository-data</artifactId>
    <version>1.0.1220</version>
  </parent>

  <name>Digital Publishing Repository Data For Site</name>
  <description>Digital Publishing Repository Data For Site</description>
  <artifactId>publishing-repository-data-site</artifactId>

  <build>
    <defaultGoal>install</defaultGoal>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
            <manifestEntries>
              <Implementation-Build>${buildNumber}</Implementation-Build>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>

      <plugin>
        <groupId>net.wouterdanes</groupId>
        <artifactId>mustache-maven-plugin</artifactId>
        <version>1.2</version>
        <executions>
          <execution>
            <id>run-mustache-template</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>mustache</goal>
            </goals>
            <configuration>
              <encoding>UTF-8</encoding>
              <context>file:${project.basedir}/src/main/config/hosts/sites.yaml</context>
              <templates>
                <template>
                  <templateFile>${basedir}/src/main/config/hosts/roots.yaml.mustache</templateFile>
                  <outputPath>${basedir}/src/main/resources/hcm-config/hst/hosts/roots.yaml</outputPath>
                </template>
                <template>
                  <templateFile>${basedir}/src/main/config/hosts/mygov.yaml.mustache</templateFile>
                  <outputPath>${basedir}/src/main/resources/hcm-config/hst/hosts/mygov.yaml</outputPath>
                </template>
                <template>
                  <templateFile>${basedir}/src/main/config/hosts/hosts.yaml.mustache</templateFile>
                  <outputPath>${basedir}/src/main/resources/hcm-config/hst/hosts/sites.yaml</outputPath>
                </template>
                <template>
                  <templateFile>${basedir}/src/main/config/hosts/site.yaml.mustache</templateFile>
                  <outputPath>${basedir}/src/main/resources/hcm-config/hst/hosts/site.yaml</outputPath>
                </template>
              </templates>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
