{{!
Declares hst:hosts configuration for itecs.site domain.
Nodes in this file depend on parent nodes declared in roots.yaml.

This domain is used as a test domain - for example, to allow
testing of sites other than mygov when accessed via a CDN.
}}# This file is{{! not }} autogenerated.
definitions:
  config:
{{#environments}}
    /hst:hst/hst:hosts/{{name}}/site/itecs/{{name}}:
      jcr:primaryType: hst:virtualhost
{{#sites}}
      /{{id}}:
        jcr:primaryType: hst:virtualhost
        /hst:root:
          jcr:primaryType: hst:mount
          hst:alias: {{id}}-site
          hst:mountpoint: /hst:publishing/hst:sites/{{id}}
          hst:schemeagnostic: true
          hst:nochannelinfo: true
          publishing:alias: {{id}}
          publishing:gtm: /content/documents/{{id}}/administration/performance/analytics/{{gtm}}
          hst:locale: en_GB
{{/sites}}

{{/environments}}
{{#sites}}
    /hst:hst/hst:hosts/internal/site/itecs/{{id}}:
      jcr:primaryType: hst:virtualhost
      /hst:root:
        jcr:primaryType: hst:mount
        hst:alias: {{id}}-site
        hst:mountpoint: /hst:publishing/hst:sites/{{id}}
        hst:schemeagnostic: true
        hst:nochannelinfo: true
        publishing:alias: {{id}}
        publishing:gtm: /content/documents/{{id}}/administration/analytics/live
        hst:locale: en_GB
{{/sites}}
